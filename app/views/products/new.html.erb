<h1>Create new product </h1>
<%= form_for @product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :stock %>
    <%= f.text_field :stock %>

    <%= f.label :retired %>
    <%= f.select :retired, [[false, false], [true, true]] %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :image_url %>
    <%= f.text_area :image_url %>

    <%= f.label :merchant_id %>
    <%= collection_select(:merchant_id, 0, Merchant.all, :id, :username)  %>


    <%= f.submit%>

<% end %>
